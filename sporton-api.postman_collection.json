{
  "info": {
    "name": "Sporton API - Ultimate Collection",
    "description": "Full Documentation for Sporton Backend. Includes Auth, Category CRUD, and Product CRUD with File Upload support.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:5001", "type": "string" },
    { "key": "TOKEN", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "01. Auth & System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/", "host": ["{{BASE_URL}}"], "path": [""] }
          }
        },
        {
          "name": "Initiate Admin",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin Sporton\",\n  \"email\": \"admin@sporton.com\",\n  \"password\": \"Sporton123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{BASE_URL}}/api/auth/initiate-admin-user", "host": ["{{BASE_URL}}"], "path": ["api", "auth", "initiate-admin-user"] }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.token) {",
                  "  pm.collectionVariables.set('TOKEN', jsonData.token);",
                  "  console.log('Token saved to variable!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@sporton.com\",\n  \"password\": \"Sporton123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{BASE_URL}}/api/auth/signin", "host": ["{{BASE_URL}}"], "path": ["api", "auth", "signin"] }
          }
        }
      ]
    },
    {
      "name": "02. Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/api/categories", "host": ["{{BASE_URL}}"], "path": ["api", "categories"] }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/api/categories/ID_DI_SINI", "host": ["{{BASE_URL}}"], "path": ["api", "categories", "ID_DI_SINI"] }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Running", "type": "text" },
                { "key": "description", "value": "Perlengkapan lari", "type": "text" },
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{BASE_URL}}/api/categories", "host": ["{{BASE_URL}}"], "path": ["api", "categories"] }
          }
        },
        {
          "name": "Update Category",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "PUT",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Running Gear", "type": "text" },
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{BASE_URL}}/api/categories/ID_DI_SINI", "host": ["{{BASE_URL}}"], "path": ["api", "categories", "ID_DI_SINI"] }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "DELETE",
            "url": { "raw": "{{BASE_URL}}/api/categories/ID_DI_SINI", "host": ["{{BASE_URL}}"], "path": ["api", "categories", "ID_DI_SINI"] }
          }
        }
      ]
    },
    {
      "name": "03. Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{BASE_URL}}/api/products", "host": ["{{BASE_URL}}"], "path": ["api", "products"] }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Sepatu Nike Joyride", "type": "text" },
                { "key": "description", "value": "Sepatu lari empuk", "type": "text" },
                { "key": "price", "value": "1200000", "type": "text" },
                { "key": "stock", "value": "50", "type": "text" },
                { "key": "category", "value": "ISI_ID_CATEGORY_DI_SINI", "type": "text" },
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{BASE_URL}}/api/products", "host": ["{{BASE_URL}}"], "path": ["api", "products"] }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "PUT",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "price", "value": "1100000", "type": "text" },
                { "key": "stock", "value": "45", "type": "text" }
              ]
            },
            "url": { "raw": "{{BASE_URL}}/api/products/ID_DI_SINI", "host": ["{{BASE_URL}}"], "path": ["api", "products", "ID_DI_SINI"] }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{TOKEN}}", "type": "string" }] },
            "method": "DELETE",
            "url": { "raw": "{{BASE_URL}}/api/products/ID_DI_SINI", "host": ["{{BASE_URL}}"], "path": ["api", "products", "ID_DI_SINI"] }
          }
        }
      ]
    }
  ]
}