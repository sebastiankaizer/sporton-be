{
  "info": {
    "name": "Sporton Backend API",
    "description": "API Documentation for Sporton Backend (Express + TypeScript).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5001",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "General",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/health",
              "host": ["{{BASE_URL}}"],
              "path": ["health"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Health check should return 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Test Middleware (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/test-middleware",
              "host": ["{{BASE_URL}}"],
              "path": ["test-middleware"]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const token = pm.collectionVariables.get('TOKEN') || pm.environment.get('TOKEN');",
                  "if (!token) {",
                  "  console.warn('TOKEN is empty. Run Auth -> Sign In first.');",
                  "}"
                ]
              }
            }
          ],
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Initiate Admin User (First Time)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@sporton.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/initiate-admin-user",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "initiate-admin-user"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Initiate admin should return 201 (created) or 409 (already initialized)', function () {",
                  "  pm.expect([201, 409]).to.include(pm.response.code);",
                  "});",
                  "if (pm.response.code === 409) {",
                  "  console.warn('Admin already exists. Use the correct credentials on Sign In, or clear users collection if you want to re-init.');",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Sign In",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Sign In should return 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const jsonData = pm.response.json();",
                  "pm.test('Token should exist in response', function () {",
                  "  pm.expect(jsonData).to.have.property('token');",
                  "  pm.expect(jsonData.token).to.be.a('string').and.not.empty;",
                  "});",
                  "if (jsonData && jsonData.token) {",
                  "  pm.collectionVariables.set('TOKEN', jsonData.token);",
                  "  pm.environment.set('TOKEN', jsonData.token);",
                  "  console.log('TOKEN saved');",
                  "} else {",
                  "  console.warn('No token found. Check email/password or initiate admin first.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@sporton.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signin",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "signin"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
