    {
      "name": "02. Authentication",
      "item": [
        {
          "name": "Initiate Admin User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.test('Admin created successfully', function() {",
                  "        pm.expect(jsonData.message).to.include('successfully');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Admin Sporton\",\n    \"email\": \"admin@sporton.com\",\n    \"password\": \"Sporton123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/initiate-admin-user",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "initiate-admin-user"]
            },
            "description": "Create the first admin user. This endpoint only works when there are no users in the database."
          },
          "response": []
        },
        {
          "name": "Login (Sign In)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('TOKEN', jsonData.data.token);",
                  "    console.log('✅ Token saved to collection variable!');",
                  "    pm.test('Login successful', function() {",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "        pm.expect(jsonData.data.token).to.be.a('string');",
                  "    });",
                  "} else {",
                  "    console.log('❌ Login failed or token not found');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@sporton.com\",\n    \"password\": \"Sporton123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signin",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "signin"]
            },
            "description": "Authenticate user and receive JWT token. Token is automatically saved to collection variable."
          },
          "response": []
        },
        {
          "name": "Get Current User (Me)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{TOKEN}}",
